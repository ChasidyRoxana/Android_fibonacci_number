<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewCurrentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewCurrentNumber"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp" />

    <TextView
        android:id="@+id/textViewPreviousNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewPreviousNumber"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/textVieNextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewNextNumber"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="50dp"/>

    <ImageButton
        android:id="@+id/imageButtonPrev"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:contentDescription="@string/arrowPrev"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/arrow"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"/>

    <ImageButton
        android:id="@+id/imageButtonNext"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:contentDescription="@string/arrowNext"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/arrow"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginStart="80dp" />


</FrameLayout>